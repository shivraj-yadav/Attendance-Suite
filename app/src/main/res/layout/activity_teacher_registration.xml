<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_abs"
    tools:context=".TeacherRegistration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Teacher Registration"
            android:textColor="#FDB600"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Register to access teacher functionalities"
            android:textColor="#FAA83A"
            android:textSize="16sp"
            android:layout_marginTop="5dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="20dp">

                <TextView
                    android:id="@+id/loginHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Teacher Registration"
                    android:textColor="#FDB600"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FDB600"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Full Name"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FDB600"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Email Address"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FDB600"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Password"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:inputType="textPassword" />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#FDB600"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Register"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/alreadyRegisteredBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already registered? Login here"
                    android:textColor="#FF9800"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>