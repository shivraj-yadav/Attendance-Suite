<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/bg_abs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Heading Section -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Details"
            android:textSize="22sp"
            android:textColor="#FDB600"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="16dp" />

        <!-- Card Layout for Student Info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Student Name -->
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: John Doe"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <!-- Student ID -->
                <TextView
                    android:id="@+id/tvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 12345"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <!-- Student Contact -->
                <TextView
                    android:id="@+id/tvContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact: 1234567890"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <!-- Student Email -->
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: johndoe@example.com"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <!-- Student Class -->
                <TextView
                    android:id="@+id/tvClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class: 12th Grade"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <!-- Student Department -->
                <TextView
                    android:id="@+id/tvDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department: Science"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Attendance Section -->
        <TextView
            android:id="@+id/tvAttendanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendance Overview"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#FAA83A"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
            android:radius="12dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Attendance Percentage -->
                <TextView
                    android:id="@+id/attendancePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Attendance: 95%"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Attendance Pie Chart -->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="24dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_message"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
